<h2>書籍一覧</h2>

<table class="table table-bordered">
  <thead class="thead-dark table-primary">
    <tr>
      <th>タイトル</th>
      <th>著者</th>
      <th>カテゴリ</th>
      <th>在庫</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.category %></td>
        <td><%= book.stock_status %></td>
        <td>
          <%= link_to "編集", edit_book_path(book) %>
          <%= button_to "削除", book, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>延滞一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th>利用者</th>
      <th>書籍</th>
      <th>期限日</th>
      <th>経過日数</th>
    </tr>
  </thead>
  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.user.name %></td>
        <td><%= loan.book.title %></td>
        <td><%= loan.due_at.strftime("%Y-%m-%d") %></td>
        <td><%= (Date.today - loan.due_at.to_date).to_i %>日</td>
      </tr>
    <% end %>
  </tbody>
</table>
