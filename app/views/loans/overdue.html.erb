<h2>延滞一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>利用者</th>
      <th>書籍</th>
      <th>期限日</th>
      <th>経過日数</th>
    </tr>
  </thead>
  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.user.name %></td>
        <td><%= loan.book.title %></td>
        <td><%= loan.due_at.strftime("%Y-%m-%d") %></td>
        <td><%= (Date.today - loan.due_at.to_date).to_i %>日</td>
      </tr>
    <% end %>
  </tbody>
</table>
