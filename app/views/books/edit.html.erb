<% content_for :title, "Editing Book" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">書籍の編集</h4>
        </div>
        <div class="card-body">
          <%= render "form", book: @book %>

          <div class="mt-4">
            <%= link_to "この書籍を表示", @book, class: "btn btn-outline-primary me-2" %>
            <%= link_to "書籍一覧に戻る", books_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
